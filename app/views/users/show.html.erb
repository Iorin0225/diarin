<h1 class='diarin-title'>
  <%= link_to root_path do %>
    Diarin
  <% end %>
</h1>

<div class="user-menu">
  <div class="user-info">
    <h2>User Information</h2>
    <dl>
      <dt>Display Name</dt>
      <dd><%= @user.display_name %></dd>
      <dt>Email Address</dt>
      <dd><%= @user.email_address %></dd>
      <dt>Password</dt>
      <dd>********</dd>
    </dl>
  </div>

  <div class="writing-books">
    <h2>Books</h2>
      <dl>
        <% @user.books.each do |book| %>
          <dt><%= book.title %></dt>
          <dd><%= link_to 'Show', book %></dd>
        <% end %>
        <dt>New one?</dt>
        <dd><%= link_to 'Create', new_book_path %></dd>
      </dl>
  </div>
  <%= button_to 'Sign Out', session_path, method: :delete %>
</div>
